{
    "compilerOptions": {
        "moduleResolution": "node",
        "strict": true,
        "rootDir": "./src/",
        "outDir": "./dist/",
        "isolatedModules": true,
        "resolveJsonModule": true,
        "module": "CommonJS",
        "target": "es2020",
        "lib": ["DOM", "DOM.Iterable", "ESNext"],
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
    },
    "exclude": ["node_modules"],
    "include": ["src"]
}


